---
import '../styles/global.css';

export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="AI-powered data analysis for Hacker News discussions using natural language queries and intelligent conversation flows" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		
		<!-- SEO Meta Tags -->
		<meta name="keywords" content="AI, data analysis, Hacker News, natural language processing, conversation AI, entity recognition, trend analysis" />
		<meta name="author" content="Pixlie Team" />
		<meta property="og:title" content={title} />
		<meta property="og:description" content="AI-powered data analysis for Hacker News discussions using natural language queries and intelligent conversation flows" />
		<meta property="og:type" content="website" />
		<meta property="og:url" content="https://pixlie.ai" />
		<meta name="twitter:card" content="summary_large_image" />
		<meta name="twitter:title" content={title} />
		<meta name="twitter:description" content="AI-powered data analysis for Hacker News discussions using natural language queries and intelligent conversation flows" />
		
		<title>{title}</title>
	</head>
	<body class="antialiased">
		<slot />
	</body>
</html>
